{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@contacts/(.*)$": "<rootDir>/src/contacts/$1",
    "^@companies/(.*)$": "<rootDir>/src/companies/$1"
  }
}
